<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <base href="/">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css"
        integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css"
        integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="css/style.css">
    <title><%=trait%></title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
</head>
<body>
    <!-- NavBar -->
    <div id="navbar-placeholder" style="position: sticky; z-index: 2;"></div>
    <!-- End NavBar -->
    <div class="cards-content-wrapper">
        <div class="profile-row">
            <label><h5>Trait:&nbsp;<%=trait%></h5></label>
            <div class="sort-by">
                <label><h5>Sort By:&nbsp;</h5></label>
                <input type="hidden" value="<%=servants['current_page']%>" id="current-page">
                <input type="hidden" value="<%=servants['limit']%>" id="page-limit">
                <select style="width: min-content;" class="custom-select" id="trait-sort-select" onchange="sort_cards('trait-sort-select', 'trait/<%=trait%>');">
                    <% let options = {'ID': 'id', 'Rarity': 'rarity', 'Name': 'name', 'Attack': 'atk', 'HP': 'hp'} %>
                    <% for(const [key, value] of Object.entries(options)) { %>
                        <% if(servants['sort'] == value) { %>
                            <option value="<%=value%>" selected><%=key%></option>
                        <% } else { %>
                            <option value="<%=value%>"><%=key%></option>
                        <% } %>
                    <% } %>
                </select>
            </div>
        </div>
        <div class="profile-row">
            <% for(let i = 0; i < servants['result'].length; ++i) { %>
                <div class="card-wrapper">
                    <div class="card-content servant-card">
                        <div class="card-header">
                            <% for(let j = 0; j < servants['result'][i]['rarity']; ++j) { %>
                                &#11088;
                            <% } %>                        </div>
                        <div class="card-inner-content">
                            <a href="/servant/<%=servants['result'][i]['name'].replace(' ', '_')%>"><img src="<%=servants['result'][i]['path']%>" alt="<%=servants['result'][i]['name']%>" style="width: 100%;"></a>
                        </div>
                        <div class="card-body">
                            <a href="/servant/<%=servants['result'][i]['name'].replace(' ', '_')%>"><%=servants['result'][i]['name']%></a>
                        </div>
                    </div>
                </div>
            <% } %>
        </div>
        <nav>
            <ul class="pagination pagination-sm justify-content-end">
                <% if(servants.prev != undefined) { %>
                    <li class="page-item">
                        <a href="/trait/<%=trait.replace(' ', '_')%>?page=<%=(servants['current_page'] - 1)%>&limit=<%=servants['limit']%>&sort=<%=servants['sort']%>" class="page-link" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                            <span class="sr-only">Previous</span>
                        </a>
                    </li>
                <% } else { %>
                    <li class="page-item disabled">
                        <a class="page-link" href="#" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                            <span class="sr-only">Previous</span>
                        </a>
                    </li>
                <% } %>
                <% if(servants['current_page'] > 3) { %>
                    <li class="page-item"><a class="page-link" href="/trait/<%=trait.replace(' ', '_')%>?page=1&limit=<%=servants['limit']%>&sort=<%=servants['sort']%>">1</a></li>
                    <% if(servants['current_page'] > 4) { %>
                        <li class="page-item"><a class="page-link" href="/trait/<%=trait.replace(' ', '_')%>?page=2&limit=<%=servants['limit']%>&sort=<%=servants['sort']%>">2</a></li>
                    <% } %>
                    <% if(servants['current_page'] > 5) { %>
                        <li class="page-item"><span class="page-link ellipsis-clickable"><a class="stretched-link ellipsis" role="button" data-placement="top" data-toggle="popover" data-html="true" data-content="<form action='/servant' method='GET'><div class='input-group'><input id='page-number-input' class='form-control mr-2' style='width: 5rem;' type='number' name='page' /><input type='hidden' id='limit-val' name='limit' value='<%=servants['limit']%>'><span class='input-group-btn'><input type='submit' class='btn btn-primary btn-block' id='goto-page'></button></span></div></form>">...</a></span></li>   
                    <% } %>
                <% } %>
                <% for(let i = servants['current_page'] - 2; i <= (servants['current_page'] + 2); ++i) { %>
                    <% if(i < 1) { continue; } %>
                    <% if(i > (parseInt(servants['list_length'] / parseInt(servants['limit'])) + 1)) { break; } %>
                    <% if(i == servants['current_page']) { %>
                        <li class="page-item active"><a class="page-link" href="/trait/<%=trait.replace(' ', '_')%>?page=<%=i%>&limit=<%=servants['limit']%>&sort=<%=servants['sort']%>"><%=i%></a></li>
                    <% } else { %>
                        <li class="page-item"><a class="page-link" href="/trait/<%=trait.replace(' ', '_')%>?page=<%=i%>&limit=<%=servants['limit']%>&sort=<%=servants['sort']%>"><%=i%></a></li>
                    <% } %>
                <% } %>
                <% if(servants['current_page'] < parseInt(servants['list_length'] / parseInt(servants['limit'])) - 1) { %>
                    <% if(servants['current_page'] < parseInt(servants['list_length'] / parseInt(servants['limit'])) - 3) { %>
                        <li class="page-item"><span class="page-link ellipsis-clickable"><a class="stretched-link ellipsis" role="button" data-placement="top" data-toggle="popover" data-html="true" data-content="<form action='/servant' method='GET'><div class='input-group'><input id='page-number-input' class='form-control mr-2' style='width: 5rem;' type='number' name='page' /><input type='hidden' id='limit-val' name='limit' value='<%=servants['limit']%>'><span class='input-group-btn'><input type='submit' class='btn btn-primary btn-block' id='goto-page'></button></span></div></form>">...</a></span></li>   
                    <% } %>
                    <% if(servants['current_page'] < parseInt(servants['list_length'] / parseInt(servants['limit'])) - 2) { %>
                        <li class="page-item"><a class="page-link" href="/trait/<%=trait.replace(' ', '_')%>?page=<%=parseInt(servants['list_length'] / parseInt(servants['limit']))%>&limit=<%=servants['limit']%>&sort=<%=servants['sort']%>"><%=parseInt(servants['list_length'] / parseInt(servants['limit']))%></a></li>
                    <% } %>
                        <li class="page-item"><a class="page-link" href="/trait/<%=trait.replace(' ', '_')%>?page=<%=parseInt(servants['list_length'] / parseInt(servants['limit'])) + 1%>&limit=<%=servants['limit']%>&sort=<%=servants['sort']%>"><%=parseInt(servants['list_length'] / parseInt(servants['limit'])) + 1%></a></li>
                <% } %>
                <% if(servants.next != undefined) { %>
                    <li class="page-item">
                        <a class="page-link" href="/trait/<%=trait.replace(' ', '_')%>?page=<%=(servants['current_page'] + 1)%>&limit=<%=servants['limit']%>&sort=<%=servants['sort']%>" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                            <span class="sr-only">Next</span>
                        </a>
                    </li>
                <% } else { %>
                    <li class="page-item disabled">
                        <a class="page-link" href="#" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                            <span class="sr-only">Next</span>
                        </a>
                    </li>
                <% } %>
            </ul>
        </nav>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"
        integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
        integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
        crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"
        integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI"
        crossorigin="anonymous"></script>
    <script type="text/javascript">
        $(function () {
            $("#navbar-placeholder").load("navbar.html");
        });
    </script>
    <script src="/main.js"></script>
</body>

</html>