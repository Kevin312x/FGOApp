<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <base href="/">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css"
        integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="css/style.css">
    <title><%=rarity%>&#9733; Servants</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
</head>
<body>
    <!-- NavBar -->
    <div id="navbar-placeholder" style="position: sticky; z-index: 2;"></div>
    <!-- End NavBar -->
    <div class="container" id="card-container">
        <h5 style="text-align: left;">Rarity: <%=rarity%></h5>
        <div class="row justify-content-center">
            <% for(let i = 0; i < Object.keys(servants['result']).length; ++i) { %>
                <div class="card-wrapper">
                    <div class="card shadow mb-3">
                        <div class="card-header" style="text-align: center;">
                            <% for(let j = 0; j < servants['result'][i]['rarity']; ++j) { %>
                                &#11088;
                            <% } %>
                        </div>
                        <div class="inner">
                            <img class="card-img-top" src="<%=servants['result'][i]['path']%>">
                        </div>
                        <div class="card-body" style="padding: 1rem;">
                            <h5 class="card-title" style="text-align: center;"><%=servants['result'][i]['name']%></h5>
                            <a href="/servant/<%=servants['result'][i]['name'].replace(' ', '_')%>" class="stretched-link"></a>
                        </div>
                    </div>
                </div>
            <% } %>
        </div>
        <nav>
            <ul class="pagination pagination-sm justify-content-end">
                <% if(servants.prev != undefined) { %>
                    <li class="page-item">
                        <a href="/servant/rarity/<%=rarity%>?page=<%=(servants['current_page'] - 1)%>&limit=<%=servants['limit']%>" class="page-link" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                            <span class="sr-only">Previous</span>
                        </a>
                    </li>
                <% } else { %>
                    <li class="page-item disabled">
                        <a class="page-link" href="#" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                            <span class="sr-only">Previous</span>
                        </a>
                    </li>
                <% } %>
                <% if(servants['current_page'] > 3) { %>
                    <li class="page-item"><a class="page-link" href="/servant/rarity/<%=rarity%>?page=1&limit=<%=servants['limit']%>">1</a></li>
                    <% if(servants['current_page'] > 4) { %>
                        <li class="page-item"><a class="page-link" href="/servant/rarity/<%=rarity%>?page=2&limit=<%=servants['limit']%>">2</a></li>
                    <% } %>
                    <% if(servants['current_page'] > 5) { %>
                        <li class="page-item"><span class="page-link ellipsis-clickable"><a class="stretched-link ellipsis" role="button" data-placement="top" data-toggle="popover" data-html="true" data-content="<form action='/servant' method='GET'><div class='input-group'><input id='page-number-input' class='form-control mr-2' style='width: 5rem;' type='number' name='page' /><input type='hidden' id='limit-val' name='limit' value='<%=servants['limit']%>'><span class='input-group-btn'><input type='submit' class='btn btn-primary btn-block' id='goto-page'></button></span></div></form>">...</a></span></li>   
                    <% } %>
                <% } %>
                <% for(let i = servants['current_page'] - 2; i <= (servants['current_page'] + 2); ++i) { %>
                    <% if(i < 1) { continue; } %>
                    <% if(i > (parseInt(servants['list_length'] / parseInt(servants['limit'])) + 1)) { break; } %>
                    <% if(i == servants['current_page']) { %>
                        <li class="page-item active"><a class="page-link" href="/servant/rarity/<%=rarity%>?page=<%=i%>&limit=<%=servants['limit']%>"><%=i%></a></li>
                    <% } else { %>
                        <li class="page-item"><a class="page-link" href="/servant/rarity/<%=rarity%>?page=<%=i%>&limit=<%=servants['limit']%>"><%=i%></a></li>
                    <% } %>
                <% } %>
                <% if(servants['current_page'] < parseInt(servants['list_length'] / parseInt(servants['limit'])) - 1) { %>
                    <% if(servants['current_page'] < parseInt(servants['list_length'] / parseInt(servants['limit'])) - 3) { %>
                        <li class="page-item"><span class="page-link ellipsis-clickable"><a class="stretched-link ellipsis" role="button" data-placement="top" data-toggle="popover" data-html="true" data-content="<form action='/servant' method='GET'><div class='input-group'><input id='page-number-input' class='form-control mr-2' style='width: 5rem;' type='number' name='page' /><input type='hidden' id='limit-val' name='limit' value='<%=servants['limit']%>'><span class='input-group-btn'><input type='submit' class='btn btn-primary btn-block' id='goto-page'></button></span></div></form>">...</a></span></li>   
                    <% } %>
                    <% if(servants['current_page'] < parseInt(servants['list_length'] / parseInt(servants['limit'])) - 2) { %>
                        <li class="page-item"><a class="page-link" href="/servant/rarity/<%=rarity%>?page=<%=parseInt(servants['list_length'] / parseInt(servants['limit']))%>&limit=<%=servants['limit']%>"><%=parseInt(servants['list_length'] / parseInt(servants['limit']))%></a></li>
                    <% } %>
                        <li class="page-item"><a class="page-link" href="/servant/rarity/<%=rarity%>?page=<%=parseInt(servants['list_length'] / parseInt(servants['limit'])) + 1%>&limit=<%=servants['limit']%>"><%=parseInt(servants['list_length'] / parseInt(servants['limit'])) + 1%></a></li>
                <% } %>
                <% if(servants.next != undefined) { %>
                    <li class="page-item">
                        <a class="page-link" href="/servant/rarity/<%=rarity%>?page=<%=(servants['current_page'] + 1)%>&limit=<%=servants['limit']%>" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                            <span class="sr-only">Next</span>
                        </a>
                    </li>
                <% } else { %>
                    <li class="page-item disabled">
                        <a class="page-link" href="#" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                            <span class="sr-only">Next</span>
                        </a>
                    </li>
                <% } %>
            </ul>
        </nav>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"
        integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
        integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
        crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"
        integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI"
        crossorigin="anonymous"></script>
    <script type="text/javascript">
        $(function () {
            $("#navbar-placeholder").load("navbar.html");
        });
    </script>
    <script src="/main.js"></script>
</body>
</html>