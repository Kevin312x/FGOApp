<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <base href="/">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css"
        integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="css/style.css">
    <title>Craft Essence List</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
</head>
<body>
    <!-- NavBar -->
    <div id="navbar-placeholder" style="position: sticky; z-index: 2;"></div>
    <!-- End NavBar -->
    <div class="container" id="card-container">
        <div class="row mb-3">
            <label class="mr-2"><h5 style="white-space: prewrap;">Sort By: </h5></label>
            <select style="width: 15%;" class="custom-select" id="ce-sort-select" onchange="sort_craft_essence()">
                <option value="ID" selected>ID</option>
                <option value="Name">Name</option>
                <option value="ATK">Attack</option>
                <option value="HP">HP</option>
            </select>
        </div>
        <div class="row justify-content-center">
            <% for(let i = 0; i < Object.keys(ce_list['result']).length; ++i) { %>
                <div class="col-sm-10 col-md-5 col-lg-3">
                    <div class="card shadow mb-3">
                        <div class="card-header" style="text-align: center;">
                            <% for(let j = 0; j < ce_list['result'][i]['rarity']; ++j) { %>
                                &#11088;
                            <% } %>
                        </div>
                        <div class="inner">
                            <img class="card-img-top" src="<%=ce_list['result'][i]['path']%>">
                        </div>
                        <div class="card-body" style="padding: 1rem;">
                            <h5 class="card-title" style="text-align: center;"><%=ce_list['result'][i]['name']%></h5>
                            <a href="/craft_essence/<%=ce_list['result'][i]['name'].replace(' ', '_')%>" class="stretched-link"></a>
                        </div>
                    </div>
                </div>
            <% } %>
        </div>
        <nav>
            <ul class="pagination pagination-sm justify-content-end">
            <% if(ce_list.prev != undefined) { %>
                <li class="page-item">
                    <a class="page-link" href="/craft_essence?page=<%=(ce_list['current_page'] - 1)%>&limit=<%=ce_list['limit']%>" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                        <span class="sr-only">Previous</span>
                    </a>
                </li>
            <% } else { %>
                <li class="page-item disabled">
                    <a class="page-link" href="#" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                        <span class="sr-only">Previous</span>
                    </a>
                </li>
            <% } %>
            <% if(ce_list['current_page'] > 3) { %>
                <li class="page-item"><a class="page-link" href="/craft_essence?page=1&limit=<%=ce_list['limit']%>">1</a></li>
                <% if(ce_list['current_page'] > 4) { %>
                    <li class="page-item"><a class="page-link" href="/craft_essence?page=2&limit=<%=ce_list['limit']%>">2</a></li>
                <% } %>
                <% if(ce_list['current_page'] > 5) { %>
                    <li class="page-item"><span class="page-link ellipsis-clickable"><a class="stretched-link ellipsis" role="button" data-placement="top" data-toggle="popover" data-html="true" data-content="<form action='/craft_essence' method='GET'><div class='input-group'><input id='page-number-input' class='form-control mr-2' style='width: 5rem;' type='number' name='page' /><input type='hidden' id='limit-val' name='limit' value='<%=ce_list['limit']%>'><span class='input-group-btn'><input type='submit' class='btn btn-primary btn-block' id='goto-page'></button></span></div></form>">...</a></span></li>   
                <% } %>
            <% } %>
            <% for(let i = ce_list['current_page'] - 2; i <= (ce_list['current_page'] + 2); ++i) { %>
                <% if(i < 1 || i > (parseInt(ce_list['ce_length'] / 25) + 1)) { %>
                    <% continue; %>
                <% } %>
                <% if(i == ce_list['current_page']) { %>
                    <li class="page-item active"><a class="page-link" href="/craft_essence?page=<%=i%>&limit=<%=ce_list['limit']%>"><%=i%></a></li>
                <% } else { %>
                    <li class="page-item"><a class="page-link" href="/craft_essence?page=<%=i%>&limit=<%=ce_list['limit']%>"><%=i%></a></li>
                <% } %>
            <% } %>
            <% if(ce_list['current_page'] < parseInt(ce_list['ce_length'] / 25) - 1) { %>
                <% if(ce_list['current_page'] < parseInt(ce_list['ce_length'] / 25) - 3) { %>
                    <li class="page-item"><span class="page-link ellipsis-clickable"><a class="stretched-link ellipsis" role="button" data-placement="top" data-toggle="popover" data-html="true" data-content="<form action='/craft_essence' method='GET'><div class='input-group'><input id='page-number-input' class='form-control mr-2' style='width: 5rem;' type='number' name='page' /><input type='hidden' id='limit-val' name='limit' value='<%=ce_list['limit']%>'><span class='input-group-btn'><input type='submit' class='btn btn-primary btn-block' id='goto-page'></button></span></div></form>">...</a></span></li>   
                <% } %>
                <% if(ce_list['current_page'] < parseInt(ce_list['ce_length'] / 25) - 2) { %>
                    <li class="page-item"><a class="page-link" href="/craft_essence?page=<%=parseInt(ce_list['ce_length'] / 25)%>&limit=<%=ce_list['limit']%>"><%=parseInt(ce_list['ce_length'] / 25)%></a></li>
                <% } %>
                    <li class="page-item"><a class="page-link" href="/craft_essence?page=<%=parseInt(ce_list['ce_length'] / 25) + 1%>&limit=<%=ce_list['limit']%>"><%=parseInt(ce_list['ce_length'] / 25) + 1%></a></li>
            <% } %>
            <% if(ce_list.next != undefined) { %>
                <li class="page-item">
                    <a class="page-link" href="/craft_essence?page=<%=(ce_list['current_page'] + 1)%>&limit=<%=ce_list['limit']%>" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                        <span class="sr-only">Next</span>
                    </a>
                </li>
            <% } else { %>
                <li class="page-item disabled">
                    <a class="page-link" href="#" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                        <span class="sr-only">Next</span>
                    </a>
                </li>
            <% } %>
            </ul>
            <script>
                $(function(){
                    $("[data-toggle='popover']").popover({
                        sanitize: false
                    })
                })

                // $('.popover-dismiss').popover({
                //     trigger: 'focus'
                // })
            </script>
          </nav>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"
        integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
        integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
        crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"
        integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI"
        crossorigin="anonymous"></script>
    <script type="text/javascript">
        $(function () {
            $("#navbar-placeholder").load("navbar.html");
        });
    </script>
    <script src="main.js"></script>    
</body>
</html>